@model EFprojekt.Models.Records

@{
    ViewData["Title"] = "Skapa";
}

<h1>Skapa</h1>

<h4>Skiva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="RecordGenre" class="control-label">Genre</label>
                <select asp-for="RecordGenre" class="form-control">

                    @* Loop out all the genres available *@
                    @foreach (var item in ViewBag.GenresList)
                    {
                        <option value="@item.GenreName">@item.GenreName</option>
                    }
                    
                </select>
                <span asp-validation-for="RecordGenre" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
