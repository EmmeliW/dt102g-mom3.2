@model EFprojekt.Models.Loans

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Loans</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @* I Lånet ska man kunna välja bland de titlar som finns inlagda.
            Jag måste loopa genom dem och skriva ut dem i select. *@
            <div class="form-group">
                <label for="RecordName" class="control-label">Vilken skiva vill du låna?</label>
                <select name="RecordName" class="form-control">
                    @foreach (var item in ViewBag.TitleList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>  
            </div>



            @* I genren ska man kunna välja bland de genresen som finns inlagda.
            Jag måste loopa genom dem och skriva ut dem i radios. 
            <div class="form-group">
                <label asp-for="RecordGenre" class="control-label">Genre</label>
                <select asp-for="RecordGenre" class="form-control">
                    @foreach (var item in ViewBag.GenresList)
                    {
                        <option value="@item.GenreName">@item.GenreName</option>
                    }
                </select>
                <span asp-validation-for="RecordGenre" class="text-danger"></span>
            </div> *@










            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
